				<bean id="auditRestTemplateInterceptor"
					class="com.spia.businessportal.common.audit.AuditRestTemplateInterceptor">
					<property name="sessionFactory" ref="sessionFactory" />
					<property name="userBO" ref="userBO" />
				</bean>
			</list>
		</property>
		<property name="messageConverters">

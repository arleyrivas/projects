<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping package="com.spia.services.entities">
    <class name="Driver" table="truck_visit_driver" dynamic-update="true">
    	<id name="cardId" column="card_id" type="string">
            <generator class="assigned" />
        </id>
        <property name="license" column="license" type="string" not-null="true"/>
        <property name="name" column="name" type="string" not-null="true"/>
    </class>
</hibernate-mapping>
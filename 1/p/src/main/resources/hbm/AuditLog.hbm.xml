<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.spia.businessportal.common.entities">
	<class name="AuditLog" table="audit_log" dynamic-update="true">
		<id name="id" column="id">
			<generator class="identity" />
		</id>
		<property name="action" column="action" type="string" not-null="true"/>
		<property name="detail" column="detail" type="string" not-null="true" length="2000"/>		
		<property name="createdAt" column="created_at" type="timestamp" not-null="true"/>
		<property name="entityId" column="entity_id" type="long" not-null="false"/>
		<property name="entityName" column="entity_name" type="string" not-null="true"/>
		<property name="createdByLDAP" column="created_by_ldap" type="string" not-null="false" length="20"/>
	</class>
</hibernate-mapping>
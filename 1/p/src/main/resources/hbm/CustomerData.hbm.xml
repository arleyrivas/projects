<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping package="com.spia.businessportal.common.entities">
 
    <class name="CustomerData" table="customer_data" dynamic-update="true">
        <id name="id" type="long" column="id">
            <generator class="native" />
        </id>
		<property name="idCustomerRequest" column="id_customer_request" type="long"/>
		<property name="info" column="info" type="text"/>
		<property name="approval" column="approval" type="text"/>
        <property name="justification" column="justification" type="text"/>
    </class>
</hibernate-mapping>
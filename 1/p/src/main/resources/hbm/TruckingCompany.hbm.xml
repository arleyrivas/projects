<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping package="com.spia.businessportal.common.entities">
 
    <class name="TruckingCompany" table="trucking_company" dynamic-update="true">
        <id name="id" column="id">
            <generator class="increment" />
        </id>
        <property name="name" column="company_name" type="string" not-null="true" length="50"/>
        <property name="truckingId" column="trucking_id" type="string" not-null="true" length="15"/>
           
        
        
    </class>
</hibernate-mapping>
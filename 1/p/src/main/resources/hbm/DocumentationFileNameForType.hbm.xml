<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
 
<hibernate-mapping package="com.spia.businessportal.common.entities">
 
    <class name="DocumentationFileNameForType" table="documentation_file_names" dynamic-update="true">
        <id name="id" type="long" column="id">
            <generator class="native" />
        </id>
        <property name="name" column="name" type="string" not-null="true" length="120"/>
        <property name="order" column="file_order" not-null="true" type="integer"/>
        <many-to-one name="type" column="type_id" class="DocumentationType" not-null="true"  fetch="join"/>
        
    </class>
</hibernate-mapping>